<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |error_message| %>
    $('.messages').html('<%= j error_message%><br>');
    //$('#answer_body').val('');
  <% end %>
<% else %>
  $('#answer-<%= @answer.id %>').replaceWith('<%= j render @answer %>').show();
  $('.messages').html('Your answer successfully updated.<br>');
  $('.edit-answer-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $('form#edit-answer-' + answer_id).show();
  });
  
<%end%>